<%- include("partials/header"); -%>

<h1>Home!</h1>
<p> <%= content %> </p>

<% posts.forEach( function(post) {  %>
  <h1> <%= post.title %>  </h1>
  <% const postPath = "/posts" + "/" + lodash(post.title)  %>
  <p>
    <%= post.text.substring(0, 100) + "..." %>
    <a href= <%=postPath %>  >Read more</a>
  </p>
<% })%>


<%- include("partials/footer"); -%>
